<% if logged_in? %>
  <div class="row">
    <div class="jumbotron_4">
    <div class="bg-mask">
      <div class="container-fluid">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="stats">
          <%= render 'shared/stats' %>
          </section>
          <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
          </section>
        </aside>
        <div class="col-md-8">
          <h3>投稿一覧</h3>
          <%= render 'shared/feed' %>
        </div>
      </div>
    </div>
    </div>
  </div>
<% else %>
    <div class="jumbotron">
      <div class="container-fluid">
        <h1>Welcome to the Neko Neko</h1>
        <h2>猫とハッピーな毎日を</h2>
        <div class="container bg-light">
        <div class="text-right">
        <%= link_to "新規登録", signup_path , class: "btn btn-lg btn-warning" %>
        <%= link_to "ログイン", login_path, class: "btn btn-lg btn-success" %>
        </div>
        </div>
      </div>
    </div>

<% end %>