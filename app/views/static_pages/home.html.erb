<% if logged_in? %>
<div class="container-fluid">
  <div class="jumbotron_4">
    <div class="bg-mask">
      <div class="row">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="stats">
          <%= render 'shared/stats' %>
          </section>
          <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
          </section>
          </aside>
          <div class="col-md-8">
            <h3>みんなの投稿</h3>
              <ol class="microposts">
                <%= render @article %>
              </ol>
              <%= will_paginate @paginatable_array, params: {controller: :static_pages, action: :home} %>
            <ol class="microposts">
            <% if @all_ranks %>
            <h3>お気に入り件数 トップ ５ 投稿</h3>
              <% @all_ranks.each do |rank| %>
                <% post = Micropost.find_by(id: rank.id) %>
                <li id="micropost-<%= rank.id %>">
                <span class="user"><%= link_to post.user.name, post.user %></span>
                <span class="content">
                <%= link_to post.content, micropost_path(post) %>
                <%= image_tag post.display_image if post.image.attached? %></span>
                <span class="timestamp">
                <%= time_ago_in_words(post.created_at) %>前に投稿
                </span>
                </li>
              <% end %>
            <% end%>
            </ol>
          </div>
      </div>
    </div>
  </div>
</div>
<% else %>
    <div class="jumbotron">
      <div class="container-fluid">
        <h1>Welcome to the Neko Neko</h1>
        <h2>猫とハッピーな毎日を</h2>
        <div class="container bg-light">
        <div class="text-right">
        <%= link_to "新規登録", signup_path , class: "btn btn-lg btn-warning" %>
        <%= link_to "ログイン", login_path, class: "btn btn-lg btn-success" %>
        </div>
        </div>
      </div>
    </div>

<% end %>